<History>:
    BoxLayout:
        orientation:'vertical'
        spacing: "5dp"
        padding: 25, 10
        MDCard:
            orientation: "vertical"
            size_hint_y: .05
            pos_hint: {"center_x": .5, "center_y": .5}
            border_radius: 20
            radius: [5]
            MDLabel:
                text: "Historial"
                font_style:'H6'
                theme_text_color: "Secondary"
                size_hint_y: None
                height: self.texture_size[1]
                halign: "center"
        ScrollView:
            size_hint_y: .8
            id: scroll
            MDGridLayout:
                id: grid
                cols: 3
                adaptive_height: True
                padding: dp(4), dp(4)
                spacing: dp(4)

        MDCard:
            size_hint_y: .15
            pos_hint: {"center_x": .5, "center_y": .5}
            border_radius: 20
            radius: [5]
            spacing: "60dp"
            padding: 25, 10
            MDTextField:
                hint_text: "Id Pedido"
                mode: "rectangle"
                current_hint_text_color:0, 0, 0, 1
            MDRaisedButton:
                text: "Buscar"
                pos_hint: {"center_x": .5 , "center_y":.5}
                size_hint_x: 1
