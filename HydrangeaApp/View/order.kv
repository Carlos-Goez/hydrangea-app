<Order>:
    id: box_order
    BoxLayout:
        orientation:'vertical'
        spacing: "5dp"
        padding: 25, 5
        MDCard:
            orientation: "vertical"
            size_hint_y: .05
            pos_hint: {"center_x": .5, "center_y": .5}
            border_radius: 2
            MDLabel:
                text: "TABLA DE PEDIDOS"
                font_style:'H6'
                theme_text_color: "Secondary"
                size_hint_y: None
                height: self.texture_size[1]
                halign: "center"
        BoxLayout:
            id: box_order_reload
            size_hint_y: .5
            DataTableOrderActive:
                id: data_table_order_home

        MDCard:
            orientation: "vertical"
            size_hint_y: .05
            pos_hint: {"center_x": .5, "center_y": .5}
            border_radius: 2
            MDLabel:
                text: "AGREGAR PEDIDO"
                font_style:'H6'
                theme_text_color: "Secondary"
                height: self.texture_size[1]
                halign: "center"
        BoxLayout:
            size_hint_y: .4
            orientation: "vertical"
            spacing: "5dp"
            padding: '5dp'
            BoxLayout
                spacing: "60dp"
                padding: 25, 10
                MDTextField:
                    id: field_order_quantity_mini
                    hint_text: "Cantidad Mini"
                    hint_text: "Cantidad Mini"
                    hint_text: "Cantidad Mini"
                    mode: "rectangle"
                    current_hint_text_color:0, 0, 0, 1
                MDTextField:
                    id: field_order_quantity_blue
                    hint_text: "Cantidad Blue"
                    mode: "rectangle"
                    current_hint_text_color:0, 0, 0, 1
            BoxLayout
                spacing: "60dp"
                padding: 25, 10
                MDTextField:
                    id:field_order_quantity_select
                    hint_text: "Cantidad Selecta"
                    mode: "rectangle"
                    current_hint_text_color:0, 0, 0, 1
                MDTextField:
                    id:field_order_box_size
                    hint_text: "Tama√±o Caja"
                    mode: "rectangle"
                    current_hint_text_color:0, 0, 0, 1
            BoxLayout
                spacing: "60dp"
                padding: 25, 10
                MDTextField:
                    id: field_order_id
                    hint_text: "ID Pedido"
                    mode: "rectangle"
                    current_hint_text_color:0, 0, 0, 1
                MDRaisedButton:
                    id: button_add_order
                    text: "Agregar"
                    pos_hint: {"center_x": .5 , "center_y": .5}
                    on_release: box_order.create_order()
                MDRaisedButton:
                    id: button_delete_order
                    text: "Borrar"
                    pos_hint: {"center_x": .5, "center_y": .5}
                    on_release: box_order.delete_order()
