<Home>:
    id: home
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 0.4
            spacing: '10dp'
            padding: 25, 10
            BoxLayout:
                size_hint_x: 0.12
                orientation: "vertical"
                spacing: '10dp'
                BoxLayout:
                    size_hint_y: 0.3
                MDCard:
                    orientation: "vertical"
                    padding: "8dp"
                    size_hint_y: .4
                    pos_hint: {"center_x": .5, "center_y": .5}
                    border_radius: 2
                    MDLabel:
                        id: label_activo
                        text: "Activo"
                        font_style:'Overline'
                        theme_text_color: "Error"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"
                        valign: "middle"
                MDCard:
                    orientation: "vertical"
                    padding: "8dp"
                    size_hint_y: .4
                    pos_hint: {"center_x": .5, "center_y": .5}
                    border_radius: 2
                    MDLabel:
                        id: label_siguiente
                        text: "SIGUIENTE"
                        font_style:'Overline'
                        theme_text_color: "Hint"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"
                        valign: "middle"
            BoxLayout:
                size_hint_x: 0.88
                orientation:"vertical"
                spacing: '10dp'
                DataOrderActiveTitle:
                    size_hint_y: 0.3
                DataOrderActive:
                    id: data_order_ongoing
                    size_hint_y: 0.4
                DataOrderActive:
                    id: data_order_outstanding
                    size_hint_y: 0.4
        BoxLayout:
            size_hint_y: 0.6
            spacing: "10dp"
            padding: 25, 10
            MDCard:
                border_radius: 2
                padding: "8dp"
                orientation: "vertical"
                size_hint_x: 0.6
                size_hint_y: 1
                elevation:10
                pos_hint: {"center_x": .5, "center_y": .5}

                Image:
                    id: flower_image
                    size: self.texture_size
                    size_hint_y: 0.9
                    source: '/home/agoez/Pictures/anki.jpg'

                MDSeparator:
                    height: "1dp"

                MDLabel:
                    id: label_flower_type
                    size_hint_y: 0.1
                    text: "Mini"
                    halign: "center"
                    font_style: 'H6'

            MDBoxLayout:
                orientation: "vertical"
                size_hint_x: 0.4
                spacing: "10dp"
                MDCard:
                    orientation: "vertical"
                    padding: "8dp"
                    size_hint_y: .19
                    pos_hint: {"center_x": .5, "center_y": .5}
                    border_radius: 2
                    MDLabel:
                        text: "FLORES POR PROCESAR"
                        font_style:'H6'
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"
                MDCard:
                    orientation: "vertical"
                    padding: "8dp"
                    size_hint_y: .27
                    pos_hint: {"center_x": .5, "center_y": .5}
                    border_radius: 2
                    MDLabel:
                        text: "SELECTA"
                        font_style:'Subtitle1'
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"
                    MDSeparator:
                        height: "1dp"
                    MDLabel:
                        id: label_quantity_select
                        text: "0"
                        font_style:'Subtitle1'
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"
                MDCard:
                    orientation: "vertical"
                    padding: "8dp"
                    size_hint_y: .27
                    pos_hint: {"center_x": .5, "center_y": .5}
                    border_radius: 2
                    MDLabel:
                        text: "MINI"
                        font_style:'Subtitle1'
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"
                    MDSeparator:
                        height: "1dp"
                    MDLabel:
                        id: label_quantity_mini
                        text: "0"
                        font_style:'Subtitle1'
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"
                MDCard:
                    orientation: "vertical"
                    padding: "8dp"
                    size_hint_y: .27
                    pos_hint: {"center_x": .5, "center_y": .5}
                    border_radius: 2
                    MDLabel:
                        text: "BLUE"
                        font_style:'Subtitle1'
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"
                    MDSeparator:
                        height: "1dp"
                    MDLabel:
                        id: label_quantity_blue
                        text: "0"
                        font_style:'Subtitle1'
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: "center"
                MDRaisedButton:
                    id: button_on
                    text: "ON"
                    pos_hint: {"center_x": .5 , "center_y":.25}
                    on_release: home.turn_on_machine()

