<Login>:
    id: login
    MDFloatLayout:
        MDLabel:
            text: "Ingresar"
            pos_hint:{"center_y":.80}
            halign:"center"
            text_color:0, 0, 0, 1
            font_style: "H3"
        MDLabel:
            text: "Bienvenido"
            pos_hint:{"center_y":.70}
            halign:"center"
            text_color:0, 0, 0, 1
            font_style: "H5"
        MDTextField:
            id: field_user
            hint_text: "Usuario"
            mode:"rectangle"
            pos_hint: {"center_x": .5 , "center_y":.5}
            color_active: app.theme_cls.primary_light
            size_hint_x: 0.5
        ClickableTextFieldRound:
            id: password_layout
            pos_hint: {"center_x": .5 , "center_y":.4}
            current_hint_text_color:0, 0, 0, 1
            size_hint_x: 0.5
        MDRaisedButton:
            text: "Ingresar"
            pos_hint: {"center_x": .5 , "center_y":.25}
            on_release: login.create_session()