<SignUp>:
    id:signup
    orientation: 'vertical'
    FloatLayout:
        MDLabel:
            text: "Registrar"
            pos_hint:{"center_y":.80}
            halign:"center"
            text_color:0, 0, 0, 1
            font_style: "H3"
        MDTextField:
            id: field_register_user
            hint_text: "Usuario"
            mode:"rectangle"
            pos_hint: {"center_x": .5 , "center_y":.6}
            color_active: app.theme_cls.primary_light
            size_hint_x: 0.5
        ClickableTextFieldRound:
            id: password_layout
            pos_hint: {"center_x": .5 , "center_y":.5}
            current_hint_text_color:0, 0, 0, 1
            size_hint_x: 0.5
        MDLabel:
            pos_hint: {'center_x': .5, "center_y":.4}
            text: "Hacer Administrador"
            font_style: "Subtitle1"
            halign: 'center'
        MDCheckbox:
            id: check_register_role
            halign: 'left'
            size_hint: None, None
            size: "48dp", "48dp"
            pos_hint: {'center_x': .7, "center_y":.4}
        MDRaisedButton:
            id: button_signup
            text: "Registrar"
            pos_hint: {"center_x": .5 , "center_y":.2}
            on_release: signup.create_user()